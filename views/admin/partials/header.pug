header.header 
    .container-fluid
        .row.align-items-center 
            .col-3
                .inner-logo 
                    a(href="/" + prefixAdmin+ "/dashboard") ADMIN 
            .col-9
                div(class='text-right')
                    if(user)
                        a(
                            href=`/${prefixAdmin}/my-account`
                            class='btn btn-primary mr-2 btn-sm'
                        ) #{user.fullName}
                    a(
                        href=`/${prefixAdmin}/auth/logout`
                        class='btn btn-danger btn-sm'
                    ) Log out