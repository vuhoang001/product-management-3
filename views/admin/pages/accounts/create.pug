extends ../../layouts/default.pug 
include ../../mixins/alter.pug 

block main 
    +alterSuccess(3000)
    +alterError(3000)
    h1(class='mb-4') Create account 

    form(
        action=`/${prefixAdmin}/accounts/create`
        enctype="multipart/form-data"
        id="form-create-product"
        method="POST"
    )
        div(class='form-group')
            label(for="fullName") Full name 
            input(
                type='text'
                class='form-control'
                id='fullName'
                name='fullName'
                required
            ) 
        
        div(class='form-group')
            label(for="email") Email 
            input(
                type='email'
                class='form-control'
                id='email'
                name='email'
            ) 

        div(class='form-group')
            label(for='passWord') Password
            input(
                type='password'
                class='form-control'
                id='password'
                name='password'
            ) 

        div(class='form-group')
            label(for='phoneNumber') Phone Number 
            input(
                type='tel'
                class='form-control'
                id='phoneNumber'
                name='phoneNumber'
            ) 

        div(
            class='form-group'
            upload-image
        )
            label(for='avatar') Avatar 
            input(
                type='file'
                class='form-control-file'
                id='avatar'
                name='avatar'
                accept='image/*'
                upload-image-input
            )
            img(
                src=""
                class='image-preview'
                upload-image-preview
            )
        
        div(
            class='form-group'
        )
            label(for='permission') Permission 
            select(name='role_id' 
                id='role_id'
                class='form-control'
            ) 
                option(disable)--SELECT--
                each item in recordRole
                    option(value=item.id) #{item.title}
        
        div(class="form-group form-check form-check-inline")
            input( 
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Active

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
            )
            label(for="statusInactive" class="form-check-label") Inactive 

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Create
    script(src="/admin/js/products.js") 