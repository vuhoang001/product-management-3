extends ../../layouts/default.pug
block main 
    h1(class="mb-4") Products list 

    .card.mb-3 
        .card-header Filter and Search 
        .card-body 
            each item in filterButtons
                button(
                    class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
                    status-data=item.status
                ) #{item.name}
            
           
    table.table.table-hover.table-sm.text-center
        thead 
            tr 
                th STT 
                th Image 
                th Title 
                th Price 
                th Status 
                th Action 
        tbody 
            each item, index in products
                tr 
                    td #{index + 1}
                    td
                        img(
                            src="/admin/image/lofi.jpg"
                            alt= item.title
                            width="100px"
                            height="auto"
                        )
                    td #{item.title}
                    td #{item.price} 
                    td 
                        if item.status == "active"
                            a(href="active" class="badge badge-success") Active 
                        else 
                            a(href="inactive" class="badge badge-danger") Inactive
                    td 
                        button(class="btn btn-warning btn-sm") Edit 
                        button(class="btn btn-danger btn-sm ml-1") Delete