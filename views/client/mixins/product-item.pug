mixin product-item(products)
    each item in products
        .col-4.mb-3 
            .product-item
                .inner-image 
                    img(src=item.thumbnail, alt="iphone 9")
                    if(item.featured == "1")
                        .inner-featured Feature
                .inner-content 
                    a(class="inner-title" href=`products/detail/${item.slug}`) #{item.title}
                    .inner-price-new 80$
                    .inner-price-old #{item.price}   
                    .inner-discount #{item.discountPercentage}