extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head('Order successfully!')

        .row 
            .col-12
                .div(class='alert alert-success')
                    |Congratulations on your successful order ! We will process your order as soon as possible ❤️❤️

        if(order)
            .row    
                .col-12 
                    h4(class='mb-2') Information 
                    table(class='table table-bordered')
                        tbody 
                            tr 
                                td Full name 
                                td 
                                    b #{order.userInfor.fullName}
                            tr
                                td Phone number 
                                td 
                                    b #{order.userInfor.phone}
                            tr
                                td Address 
                                td 
                                    b #{order.userInfor.address}


        if(order)
            .row
                .col-12 
                    h4(class='mb-2') Information 
                    table(class='table table-bordered')
                        thead 
                            tr 
                                th Index 
                                th Avatar 
                                th Name 
                                th Price 
                                th Quantity 
                                th Total price 
                        tbody      
                            each item, index in order.products                     
                                tr
                                    td #{index + 1}
                                    td 
                                        img(src=item.productInfo.thumbnail, alt="" width="80px")
                                    td #{item.productInfo.title}
                                    td #{item.price}
                                    td #{item.quantity}
                                    td #{item.newPrice}

                        