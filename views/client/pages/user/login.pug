extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head('Login')

        .row.justify-content-center 
            .col-8 
                h1(class='text-center') Login
                form(
                    action="/user/login"
                    method="POST"
                )
                    div(class='form-group')
                        label(for="fullName") Full name 
                        input(
                            type='text'
                            class='form-control'
                            id='fullName'
                            name='fullName'
                            required
                        )
                    div(class='form-group')
                        label(for="password") Password 
                        input(
                            type='password'
                            class='form-control'
                            id='password'
                            name='password'
                            required
                        ) 
                    button(
                        type='submit'
                        class='btn btn-success'
                    ) Login

                a(href='/user/password/forget' class='mb-2') Forget password ? 
